        "# Set y as the label.\n",
        "y_train = train_df['y_label'].values\n",
        "y_test  = test_df['y_label'].values\n",
        "\n",
        "print(\"Number of training records:\", X_train.shape[0])\n",
        "print(\"Number of test records:\", X_test.shape[0])\n"
